# GCP + Vercel Pro low-cost serverless deployment profile
# Copy to .env.gcp.vercel and set values.

# GCP
PROJECT_ID=your-gcp-project-id
REGION=us-central1
AR_REPO=chamberai

# Cloud Run services
API_SERVICE=chamberai-api
WORKER_SERVICE=chamberai-worker

# Public frontend URL (Vercel)
VERCEL_FRONTEND_URL=https://your-app.vercel.app

# Runtime
GCS_BUCKET_NAME=your-audio-bucket
FIREBASE_AUTH_ENABLED=true

# Cost controls
API_MIN_INSTANCES=0
API_MAX_INSTANCES=2
WORKER_MIN_INSTANCES=0
WORKER_MAX_INSTANCES=1
API_MEMORY=512Mi
WORKER_MEMORY=512Mi
API_CPU=1
WORKER_CPU=1

# Data retention
AUDIO_RETENTION_DAYS=30
