{
  "name": "cam-aims",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "node --test 'tests/unit/**/*.test.js'",
    "test:unit:watch": "node --test --watch 'tests/unit/**/*.test.js'",
    "test:unit:coverage": "nyc node --test 'tests/unit/**/*.test.js'",
    "test:e2e": "playwright test",
    "test:e2e:critical": "playwright test --grep @critical",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:contracts": "node --test 'tests/contracts/**/*.test.mjs'",
    "test:metrics": "./scripts/check_metrics_thresholds.sh",
    "test:security": "./scripts/check_security_audit.sh && ./scripts/check_no_secrets.sh",
    "test:rollback-drill": "./scripts/rollback_drill.sh",
    "test:reset-state": "./scripts/reset_test_state.sh",
    "test:seed-data": "./scripts/seed_test_data.sh",
    "test:seed-fixtures": "./scripts/seed_fixture_data.sh",
    "test:console-guard-trend": "bash -o pipefail -c 'PLAYWRIGHT_CONSOLE_GUARD_MODE=warn npm run test:e2e:critical | tee artifacts/console-guard-warn.log' && ./scripts/track_console_guard_warnings.sh artifacts/console-guard-warn.log artifacts/console-guard-warning-count.txt artifacts/console-guard-warning-trend.json",
    "test:console-guard-regression": "./scripts/check_console_guard_regression.sh artifacts/console-guard-warning-trend.json docs/testing/console_guard_baseline.json",
    "test:rollback-warning-threshold": "./scripts/check_rollback_warnings.sh artifacts/rollback-drill-report.txt",
    "test:verify-release-archive": "./scripts/verify_release_archive.sh artifacts/release-evidence.tar.gz",
    "test:release-gate": "./scripts/release_gate.sh",
    "release:evidence": "./scripts/build_release_evidence.sh",
    "test:quality": "bash ./scripts/check_test_quality.sh",
    "test:errors": "node --test 'tests/unit/error-handling.test.js'",
    "test:motions": "node --test 'tests/unit/motions.test.js'",
    "test:edge-cases": "node --test 'tests/unit/edge-cases.test.js'",
    "test:coverage-report": "nyc report --reporter=html",
    "dev:api": "node services/api/server.js",
    "dev:console": "node scripts/serve_console.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "nyc": "^15.1.0"
  },
  "dependencies": {
    "@openai/codex": "^0.101.0"
  }
}
